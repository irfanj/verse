cell()
  display inline-block
  padding-right 2rem

well()
  padding 1rem
  margin-bottom 1rem
  background silver
  border-radius 0.25rem

html *
  box-sizing border-box

body
  width floor((780px / grid-unit)rem)
  margin auto

main
  cell()
  width (2/3 * 100)%

aside
  cell()
  width (1/3 * 100)%
  vertical-align top

footer
  margin-top 1rem
  border-top 1px solid silver
  padding-top 1rem
  text-align center

